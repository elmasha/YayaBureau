<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".Activities.Add_Candidate">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/LinearLayoutAdd"
        android:padding="8dp"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/BackToMainView"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/ic_west"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="wrap_content"
            android:text="New candidate"
            android:textColor="@color/main2"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_height="wrap_content"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_margin="8dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main2"
                                android:textSize="17dp"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:layout_margin="5dp"
                                android:text="Add photo"/>

                            <com.getbase.floatingactionbutton.FloatingActionButton
                                android:id="@+id/add_profilePhoto"
                                android:layout_width="wrap_content"
                                app:fab_colorNormal="@color/white"
                                app:fab_colorPressed="@color/blue"
                                android:layout_gravity="center_horizontal"
                                app:fab_icon="@drawable/ic_add_a_photo_24"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="80dp"
                            android:layout_gravity="center"
                            app:civ_border_color="@color/main"
                            app:civ_border_width="1dp"
                            android:layout_marginStart="50dp"
                            android:id="@+id/profile"
                            android:layout_height="80dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            android:layout_height="wrap_content">


                            <TextView
                                android:text="Age"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/primary"
                                android:textStyle="bold"
                                android:textSize="19dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/age"
                                android:text="0"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"

                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/Cfirst_name"
                            android:layout_width="150dp"
                            android:hint="First name*"
                            android:layout_gravity="center"
                            android:inputType="textPersonName"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/Cmiddle_name"
                            android:layout_width="150dp"
                            android:inputType="textPersonName"
                            android:layout_gravity="center"
                            android:hint="Middle name*"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/surname"
                            android:layout_width="150dp"
                            android:inputType="textPersonName"
                            android:hint="Surname*"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/Cid_no"
                            android:layout_width="150dp"
                            android:hint="ID number*"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                    <Spinner
                        android:id="@+id/gender"
                        android:layout_width="250dp"
                        android:hint="en"
                        android:entries="@array/sex"
                        android:layout_height="40dp"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/dob"
                            android:layout_width="150dp"
                            android:hint="Date of birth*"
                            android:inputType="date"
                            android:layout_height="wrap_content"/>





                        <EditText
                            android:id="@+id/mobile_no"
                            android:layout_width="150dp"
                            android:hint="Phone number*"
                            android:inputType="phone"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/home_county"
                            android:layout_width="160dp"
                            android:hint="Home county*"
                            android:inputType="textPersonName"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/home_ward"
                            android:layout_width="160dp"
                            android:hint="Home ward*"
                            android:inputType="textPersonName"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/village"
                            android:layout_width="150dp"
                            android:hint="Village*"
                            android:inputType="textPersonName"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/residence"
                            android:layout_width="150dp"
                            android:hint="Residence*"
                            android:inputType="textPersonName"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                    <Spinner
                        android:id="@+id/experience"
                        android:layout_width="250dp"
                        android:hint="en"
                        android:entries="@array/experience"
                        android:layout_height="40dp"/>

                    <EditText
                        android:id="@+id/salary"
                        android:layout_width="250dp"
                        android:hint="Salary*"
                        android:inputType="number"
                        android:layout_height="wrap_content"/>



                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:text="Next of kin"/>


                    <EditText
                        android:id="@+id/kin_name"
                        android:layout_width="300dp"
                        android:hint="Full name"
                        android:inputType="textPersonName"
                        android:layout_height="wrap_content"/>



                    <EditText
                        android:id="@+id/kin_number"
                        android:layout_width="250dp"
                        android:inputType="phone"
                        android:hint="Mobile phone"
                        android:layout_height="wrap_content"/>




                </LinearLayout>


                <Button
                    android:id="@+id/upload_candidate"
                    android:layout_width="200dp"
                    android:text="Upload details"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/btn_round_gradient"
                    android:layout_height="wrap_content"/>


            </LinearLayout>




        </androidx.cardview.widget.CardView>



    </LinearLayout>

</androidx.core.widget.NestedScrollView>