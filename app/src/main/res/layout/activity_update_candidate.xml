<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Activities.UpdateCandidateActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_height="match_parent">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/bg_black"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/candidate_profile"
                        android:layout_width="120dp"
                        app:civ_border_color="@color/primary"
                        app:civ_border_width="2dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="9dp"
                        android:layout_height="120dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/candidate_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Elmasha  Omondi"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/primary"
                            android:textSize="19dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/candidate_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="23"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/candidate_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Available"
                            android:textColor="@color/white"
                            android:textSize="22dp"
                            android:textStyle="bold" />


                    </LinearLayout>



                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginBottom="14dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/StatusLayout"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Status"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <Spinner
                                android:layout_width="wrap_content"
                                android:id="@+id/select_status"
                                android:entries="@array/status"
                                android:layout_height="40dp"/>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_margin="4dp"
                                    android:layout_height="wrap_content">

                                    <com.getbase.floatingactionbutton.FloatingActionButton
                                        android:id="@+id/upload_candidate"
                                        android:layout_width="wrap_content"
                                        app:fab_size="mini"
                                        app:fab_colorPressed="@color/black"
                                        android:layout_gravity="center_horizontal"
                                        app:fab_colorNormal="@color/primary"
                                        app:fab_icon="@drawable/ic_sync"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:text="Update"
                                        android:textColor="@color/black"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>



                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_margin="4dp"
                                    android:layout_height="wrap_content">

                                    <com.getbase.floatingactionbutton.FloatingActionButton
                                        android:id="@+id/delete_candidate"
                                        android:layout_width="wrap_content"
                                        app:fab_size="mini"
                                        app:fab_colorPressed="@color/black"
                                        android:layout_gravity="center_horizontal"
                                        app:fab_colorNormal="@color/primary"
                                        app:fab_icon="@drawable/ic_delete"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:text="Delete"
                                        android:textAlignment="center"
                                        android:layout_gravity="center_horizontal"
                                        android:textColor="@color/black"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_margin="4dp"
                                    android:layout_height="wrap_content">

                                    <com.getbase.floatingactionbutton.FloatingActionButton
                                        android:id="@+id/call_candidate"
                                        android:layout_width="wrap_content"
                                        app:fab_size="mini"
                                        app:fab_colorPressed="@color/black"
                                        android:layout_gravity="center_horizontal"
                                        app:fab_colorNormal="@color/primary"
                                        app:fab_icon="@drawable/ic_phone"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:text="Call"
                                        android:textAlignment="center"
                                        android:layout_gravity="center_horizontal"
                                        android:textColor="@color/black"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>


                            </LinearLayout>





                        </LinearLayout>


                    </LinearLayout>




                    <TextView
                        android:id="@+id/more"
                        android:textSize="18dp"
                        android:text="Candidate Details"
                        android:layout_margin="8dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/candidate_county"
                            android:textSize="18dp"
                            android:text="Nairobi"
                            android:textColor="@color/grey"
                            android:drawableLeft="@drawable/ic_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <TextView
                            android:id="@+id/candidate_ward"
                            android:textSize="18dp"
                            android:text=""
                            android:textColor="@color/grey"
                            android:layout_marginStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>



                    <TextView
                        android:id="@+id/candidate_id"
                        android:textSize="18dp"
                        android:text="3445353453"
                        android:layout_margin="5dp"
                        android:textColor="@color/grey"
                        android:drawableLeft="@drawable/ic_portrait"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:id="@+id/candidate_phone"
                        android:textSize="18dp"
                        android:text="072324546"
                        android:textColor="@color/grey"
                        android:layout_margin="5dp"
                        android:drawableLeft="@drawable/ic_phone2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/candidate_salary"
                        android:textSize="18dp"
                        android:text="5000"
                        android:textColor="@color/blue"
                        android:layout_margin="5dp"
                        android:drawableLeft="@drawable/ic_monetization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/candidate_residence"
                        android:textSize="18dp"
                        android:layout_margin="5dp"
                        android:text=""
                        android:drawableLeft="@drawable/ic_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/LayoutEmployer"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/employerDetails"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:text="Employer details"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/candidate_employer"
                    android:textSize="18dp"
                    android:text=""
                    android:drawableLeft="@drawable/ic_person_24"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/employer_contact"
                    android:textSize="18dp"
                    android:text=""
                    android:drawableLeft="@drawable/ic_contact_phone"
                    android:drawableTint="@color/black"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>





                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/employer_county"
                        android:textSize="18dp"
                        android:text=""
                        android:textColor="@color/grey"
                        android:drawableLeft="@drawable/ic_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:id="@+id/employer_city"
                        android:textSize="18dp"
                        android:text=""
                        android:layout_marginStart="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>




            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>




</androidx.core.widget.NestedScrollView>