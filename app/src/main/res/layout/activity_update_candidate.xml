<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Activities.UpdateCandidateActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_height="match_parent">




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/candidate_profile"
                        android:layout_width="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="9dp"
                        android:layout_height="120dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/candidate_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Elmasha  Omondi"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/grey"
                            android:textSize="19dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/candidate_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="23"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/candidate_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Available"
                            android:textColor="@color/main2"
                            android:textSize="19dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Status"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <Spinner
                                android:layout_width="wrap_content"
                                android:id="@+id/select_status"
                                android:layout_gravity="center"
                                android:entries="@array/status"
                                android:layout_height="40dp"/>


                            <Button
                                android:id="@+id/upload_candidate"
                                android:layout_width="160dp"
                                android:text="Update status"
                                android:textColor="@color/black"
                                android:layout_margin="8dp"
                                android:textSize="16dp"
                                android:textAllCaps="false"
                                android:background="@drawable/btn_round_gradient"
                                android:layout_height="40dp"/>


                        </LinearLayout>


                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/candidate_county"
                            android:textSize="18dp"
                            android:text="Nairobi"
                            android:textColor="@color/grey"
                            android:drawableLeft="@drawable/ic_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <TextView
                            android:id="@+id/candidate_ward"
                            android:textSize="18dp"
                            android:text=""
                            android:textColor="@color/grey"
                            android:layout_marginStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>



                    <TextView
                        android:id="@+id/candidate_id"
                        android:textSize="18dp"
                        android:text="3445353453"
                        android:layout_margin="5dp"
                        android:textColor="@color/grey"
                        android:drawableLeft="@drawable/ic_portrait"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:id="@+id/candidate_phone"
                        android:textSize="18dp"
                        android:text="072324546"
                        android:textColor="@color/grey"
                        android:layout_margin="5dp"
                        android:drawableLeft="@drawable/ic_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/candidate_salary"
                        android:textSize="18dp"
                        android:text="5000"
                        android:textColor="@color/blue"
                        android:layout_margin="5dp"
                        android:drawableLeft="@drawable/ic_monetization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/candidate_residence"
                        android:textSize="18dp"
                        android:layout_margin="5dp"
                        android:text=""
                        android:drawableLeft="@drawable/ic_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/LayoutEmployer"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/employerDetails"
                        android:textSize="18dp"
                        android:layout_margin="5dp"
                        android:text="Employer details"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:id="@+id/candidate_employer"
                        android:textSize="18dp"
                        android:text=""
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:id="@+id/employer_contact"
                        android:textSize="18dp"
                        android:text=""
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:id="@+id/candidate_city"
                        android:textSize="18dp"
                        android:text=""
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>





            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>




</androidx.core.widget.NestedScrollView>