<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:padding="5dp"
    android:layout_margin="4dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/row_image"
                android:layout_width="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_add_a_photo_24"
                android:layout_height="80dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/row_name"
                    android:layout_width="wrap_content"
                    android:text="Elmasha Omondi"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/row_age"
                    android:layout_width="wrap_content"
                    android:text="23"
                    android:textSize="15dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/row_county"
                        android:textAlignment="center"
                        android:text="Nairobi"
                        android:drawableLeft="@drawable/ic_location"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/row_ward"
                        android:text="kabiria"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"/>


                </LinearLayout>
                <TextView
                    android:id="@+id/row_mobile"
                    android:layout_width="wrap_content"
                    android:text="073828829"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>









    </LinearLayout>


</androidx.cardview.widget.CardView>