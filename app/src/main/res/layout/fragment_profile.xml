<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/bg_black"
                    android:padding="8dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/LogOut"
                        android:layout_width="wrap_content"
                        android:text="LogOut  "
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/ic_logout"
                        android:textColor="@color/ColorRed"
                        android:layout_gravity="end"
                        android:drawableTint="@color/ColorRed"
                        android:layout_height="wrap_content"/>


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:src="@drawable/user"
                        android:id="@+id/userImage"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="120dp"
                        android:layout_margin="5dp"
                        app:civ_border_color="@color/primary"
                        app:civ_border_width="2dp"
                        android:layout_height="120dp"/>


                    <TextView
                        android:id="@+id/B_name"
                        android:textStyle="bold"
                        android:textColor="@color/main"
                        android:layout_gravity="center_horizontal"
                        android:text="Elmasha Omondi Oduor"
                        android:textSize="19dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:id="@+id/B_email"
                        android:textColor="@color/lightGrey"
                        android:text=" elmashavitran@gmail.com"
                        android:textSize="17dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/B_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="2dp"
                        android:text="3444565"
                        android:textColor="@color/lightGrey"
                        android:textSize="18dp"
                         />



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/lightGrey"
                            android:text="Bureau: "
                            android:textSize="19dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/B_bureauName"
                            android:textStyle="bold"
                            android:textColor="@color/primary"
                            android:text=""
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>

                </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/B_CandidateCount"
                        android:textColor="@color/blue"
                        android:text=""
                        android:drawableLeft="@drawable/ic_group"
                        android:textStyle="bold"
                        android:textSize="19dp"
                        android:drawableTint="@color/primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/B_Candidate"
                        android:text="My candidates"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:paddingStart="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Contact details."
                    android:textSize="19dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/B_phone"
                    android:textColor="@color/grey"
                    android:text="072385949"
                    android:textSize="19dp"
                    android:drawableLeft="@drawable/ic_phone2"
                    android:drawableTint="@color/primary"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>





                <TextView
                    android:id="@+id/B_boxNo"
                    android:textColor="@color/grey"
                    android:text=" Box No. 282792"
                    android:textSize="17dp"
                    android:drawableTint="@color/primary"
                    android:drawableLeft="@drawable/ic_mailbox"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Physical Address."
                    android:textSize="19dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/B_buildingName"
                    android:textColor="@color/grey"
                    android:text=" Sk"
                    android:drawableLeft="@drawable/ic_home"
                    android:textSize="17dp"
                    android:layout_marginTop="10dp"
                    android:drawableTint="@color/primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/B_street"
                    android:textColor="@color/grey"
                    android:text="Satellite"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="18dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/B_county"
                        android:textColor="@color/grey"
                        android:text="Nairobi"
                        android:drawableLeft="@drawable/ic_location"
                        android:drawableTint="@color/primary"
                        android:textSize="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:id="@+id/B_estate"
                        android:textColor="@color/grey"
                        android:text="Kabiria"
                        android:textSize="17dp"
                        android:layout_marginStart="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                </LinearLayout>


            </LinearLayout>




        </LinearLayout>





    </androidx.core.widget.NestedScrollView>


</RelativeLayout>