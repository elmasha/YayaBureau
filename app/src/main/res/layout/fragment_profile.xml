<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/bg_black"
                    android:padding="8dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/LogOut"
                        android:layout_width="wrap_content"
                        android:text="LogOut  "
                        android:visibility="gone"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/ic_logout"
                        android:textColor="@color/ColorRed"
                        android:layout_gravity="end"
                        android:drawableTint="@color/ColorRed"
                        android:layout_height="wrap_content"/>


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:src="@drawable/user"
                        android:id="@+id/userImage"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="100dp"
                        android:layout_margin="5dp"
                        app:civ_border_color="@color/primary"
                        app:civ_border_width="2dp"
                        android:layout_height="100dp"/>


                    <TextView
                        android:id="@+id/B_name"
                        android:textStyle="bold"
                        android:textColor="@color/main"
                        android:layout_gravity="center_horizontal"
                        android:text="Elmasha Omondi Oduor"
                        android:textSize="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:id="@+id/B_email"
                        android:textColor="@color/lightGrey"
                        android:text=" elmashavitran@gmail.com"
                        android:textSize="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="2dp"
                            android:text="ID no."
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="2dp"
                            android:text=": "
                            android:textColor="@color/lightGrey"
                            android:textSize="15dp"
                            />

                        <TextView
                            android:id="@+id/B_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="2dp"
                            android:text="3444565"
                            android:textColor="@color/lightGrey"
                            android:textSize="15dp"
                            />

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/lightGrey"
                            android:text="Bureau: "
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/B_bureauName"
                            android:textStyle="bold"
                            android:textColor="@color/primary"
                            android:text=""
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/B_CandidateCount"
                            android:textColor="@color/primary"
                            android:text=""
                            android:drawableLeft="@drawable/ic_group"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:drawableTint="@color/primary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/B_Candidate"
                            android:text="Candidates"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:paddingStart="5dp"
                            android:textColor="@color/lightGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                </LinearLayout>





                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="4dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <com.getbase.floatingactionbutton.FloatingActionButton
                        android:id="@+id/edit_profile"
                        android:layout_width="wrap_content"
                        app:fab_size="mini"
                        app:fab_colorPressed="@color/black"
                        android:layout_gravity="center_horizontal"
                        app:fab_colorNormal="@color/primary"
                        app:fab_icon="@drawable/ic_edit"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="edit profile"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>






                </LinearLayout>




            <LinearLayout
                android:id="@+id/ProfileDetails"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="12dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Contact details."
                        android:textSize="19dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textColor="@color/grey"
                            android:text="Mobile no."
                            android:textSize="15dp"
                            android:drawableRight="@drawable/ic_phone2"
                            android:drawableTint="@color/black"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textColor="@color/grey"
                            android:text=": "
                            android:textSize="17dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/B_phone"
                            android:textColor="@color/black"
                            android:text=" "
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textColor="@color/grey"
                            android:text=" Box no."
                            android:textSize="15dp"
                            android:drawableTint="@color/black"
                            android:drawableRight="@drawable/ic_mailbox"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <TextView
                            android:textColor="@color/grey"
                            android:text=": "
                            android:textSize="16dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                        <TextView
                            android:id="@+id/B_boxNo"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="282792"
                            android:textSize="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>












                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="12dp"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    </LinearLayout>


                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Physical Address."
                        android:textSize="19dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:textColor="@color/grey"
                                android:text="Residence "
                                android:drawableRight="@drawable/ic_home"
                                android:textSize="17dp"
                                android:drawableTint="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:textColor="@color/grey"
                                android:text=": "
                                android:textSize="17dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/B_buildingName"
                            android:textColor="@color/black"
                            android:text=" Sk"
                            android:textSize="17dp"
                            android:drawableTint="@color/black"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/B_street"
                            android:textColor="@color/black"
                            android:text="Satellite"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="18dp"
                        android:layout_height="wrap_content">


                        <TextView
                            android:textColor="@color/grey"
                            android:text="Location"
                            android:drawableRight="@drawable/ic_location"
                            android:drawableTint="@color/black"
                            android:textSize="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <TextView
                            android:textColor="@color/grey"
                            android:text=": "
                            android:textSize="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/B_county"
                            android:textColor="@color/black"
                            android:text="Nairobi"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <TextView
                            android:id="@+id/B_estate"
                            android:textColor="@color/black"
                            android:text="Kabiria"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            android:layout_marginStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>



            <LinearLayout
                android:id="@+id/ProfileEditDetails"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="12dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Edit contact details."
                        android:textSize="19dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>




                        <EditText
                            android:id="@+id/BEdit_name"
                            android:textColor="@color/grey"
                            android:text=""
                            android:textSize="19dp"
                            android:hint="Enter full name"
                            android:layout_marginTop="10dp"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/BEdit_phone"
                            android:textColor="@color/grey"
                            android:hint="072385949"
                            android:textSize="19dp"
                            android:drawableLeft="@drawable/ic_phone2"
                            android:drawableTint="@color/primary"
                            android:layout_marginTop="10dp"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"/>




                    <EditText
                        android:id="@+id/BEdit_email"
                        android:textColor="@color/grey"
                        android:hint="Enter email"
                        android:textSize="19dp"
                        android:drawableLeft="@drawable/ic_email"
                        android:drawableTint="@color/primary"
                        android:layout_marginTop="10dp"
                        android:layout_width="270dp"
                        android:inputType="textEmailAddress"
                        android:layout_height="wrap_content"/>


                    <EditText
                        android:id="@+id/BEdit_BName"
                        android:textColor="@color/grey"
                        android:text=""
                        android:hint="Enter Bureau name"
                        android:textSize="19dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"/>




                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="12dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Edit physical Address."
                        android:textSize="19dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/BEdit_buildingName"
                        android:textColor="@color/grey"
                        android:hint="Enter rsidence"
                        android:drawableLeft="@drawable/ic_home"
                        android:textSize="17dp"
                        android:layout_marginTop="10dp"
                        android:drawableTint="@color/primary"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/BEdit_street"
                        android:textColor="@color/grey"
                        android:text="Satellite"
                        android:textSize="17dp"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="18dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/BEdit_county"
                            android:textColor="@color/grey"
                            android:hint="Enter County"
                            android:drawableLeft="@drawable/ic_location"
                            android:drawableTint="@color/primary"
                            android:textSize="17dp"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"/>


                        <EditText
                            android:id="@+id/BEdit_estate"
                            android:textColor="@color/grey"
                            android:hint="Enter ward"
                            android:textSize="17dp"
                            android:layout_marginStart="5dp"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>


                </LinearLayout>


                <Button
                    android:id="@+id/Btnsave_ProfileEdits"
                    android:layout_width="200dp"
                    android:text="Save changes"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/btn_round_gradient"
                    android:layout_height="wrap_content"/>

            </LinearLayout>








        </LinearLayout>





    </androidx.core.widget.NestedScrollView>


</RelativeLayout>