<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RegisterActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main2"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textSize="22dp"
            android:text="New Bureau registration"/>


        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:text="Personal details"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/first_name"
                        android:layout_width="150dp"
                        android:hint="First name*"
                        android:inputType="textPersonName"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/middle_name"
                        android:layout_width="150dp"
                        android:inputType="textPersonName"
                        android:hint="Middle name*"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="150dp"
                    android:inputType="textPersonName"
                    android:hint="Last name*"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/id_no"
                    android:layout_width="250dp"
                    android:hint="ID number*"
                    android:inputType="number"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/bureau_name"
                    android:layout_width="250dp"
                    android:hint="Enter bureau name"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:text="Physical Address"/>


                <EditText
                    android:id="@+id/building_name"
                    android:layout_width="250dp"
                    android:hint="Building name"
                    android:inputType="text"
                    android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/street_name"
                android:layout_width="250dp"
                android:inputType="text"
                android:hint="Street name*"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/estate_name"
                android:layout_width="250dp"
                android:inputType="textPersonName"
                android:hint="Estate name"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/city"
                android:layout_width="250dp"
                android:hint="City/Town*"
                android:inputType="text"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/county"
                android:layout_width="250dp"
                android:hint="County"
                android:inputType="textPersonName"
                android:layout_height="wrap_content"/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:text="Contact details"/>


            <EditText
                android:id="@+id/email_address"
                android:layout_width="250dp"
                android:hint="Email address"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/box_no"
                    android:layout_width="120dp"
                    android:inputType="number"
                    android:hint="Box No."
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/postal_code"
                    android:layout_width="120dp"
                    android:inputType="number"
                    android:hint="Postal code"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


            <EditText
                android:id="@+id/phone_no"
                android:layout_width="250dp"
                android:inputType="text"
                android:hint="Phone number*"
                android:layout_height="wrap_content"/>


        </LinearLayout>


        <Button
            android:id="@+id/Btn_register"
            android:layout_width="200dp"
            android:text="Register"
            android:textColor="@color/white"
            android:layout_margin="8dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_round_gradient"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>